<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:fitsSystemWindows="true"
    tools:context="com.example.snikdha.partha_photography_final.MainActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->


    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/homebg"
            android:orientation="horizontal"
            tools:ignore="UselessParent">




            <TextView
                android:id="@+id/fullscreen_content"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:keepScreenOn="true"

                android:textColor="#33b5e5"
                android:textSize="50sp"
                android:textStyle="bold" />


        </LinearLayout>
    </FrameLayout>


    <ImageView
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:id="@+id/camera_icon"
        android:src="@drawable/cameraicon"
        android:translationX="-90dp"
        android:translationY="40dp"


       />
    <ImageButton
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:id="@+id/about_btn"
        android:src="@drawable/aboutbtn"
        android:translationX="160dp"
        android:translationY="15dp"

        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:layout_below="@+id/hlTopBar"
        android:background="#00000000"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:id="@+id/gallery_btn"
        android:src="@drawable/gallerybtn"
        android:translationX="250dp"
        android:translationY="90dp"

        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:layout_below="@+id/hlTopBar"
        android:background="#00000000"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:id="@+id/favourite_btn"
        android:src="@drawable/favuritbtn"
        android:translationX="290dp"
        android:translationY="200dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:layout_below="@+id/hlTopBar"
        android:background="#00000000"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:id="@+id/blog_btn"
        android:src="@drawable/blogbtn"
        android:translationX="260dp"
        android:translationY="320dp"

        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:layout_below="@+id/hlTopBar"
        android:background="#00000000"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:id="@+id/contact_btn"
        android:src="@drawable/contactbtn"
        android:translationX="0dp"
        android:translationY="0dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:layout_below="@+id/hlTopBar"
        android:background="#00000000"
        android:scaleType="fitXY" />



    <ImageView
        android:id="@+id/bird_btn"
        android:layout_width="350dp"
        android:layout_height="450dp"

        android:src="@drawable/birdpic"
        android:translationX="-90dp"
        android:translationY="40dp"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_gravity="right">












    </LinearLayout>



</FrameLayout>

